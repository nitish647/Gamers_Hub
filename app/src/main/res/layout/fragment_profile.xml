<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.homePage.fragment.ProfileFragment">


    <RelativeLayout
        android:background="@color/gamers_hub_theme"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/appBarLayoutRelative"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/logOutRelative"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_logout"
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:tint="@android:color/white">
            </ImageView>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/profileRelative"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/appBarLayoutRelative">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileIcon"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:elevation="@dimen/cardview_default_radius"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"


                    android:src="@drawable/gamers_hub_icon15">

                </de.hdodenhof.circleimageview.CircleImageView>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profileIcon"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/profileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Gamers Hub"
                        android:padding="5dp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="20dp">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">


                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/light_yellow"
                android:padding="@dimen/_5sdp"
                android:elevation="@dimen/cardview_default_radius"
                android:background="@drawable/round_corners"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/redeemCoinsRecycler"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/indian_coin"
                    android:layout_width="35dp"
                    android:layout_height="35dp">

                </ImageView>
                <TextView

                    android:id="@+id/redeemCoinsTextview"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    tools:text=" 5000 coins"
                    android:textStyle="bold"
                    style="@style/semi_bold_textview"
                    android:textSize="@dimen/textHeading"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profileRelative"
            android:background="@drawable/top_round_corners"

            android:elevation="@dimen/cardview_default_elevation"
            android:padding="25dp">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fillViewport="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/rewardsRelative"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                app:tint="@android:color/black"
                                android:layout_width="25dp"
                                android:layout_height = "25dp"
                                android:src="@drawable/ic_money_bag"/>

                            <TextView
                                style="@style/contentTextview"
                                android:layout_marginStart="20dp"
                                android:text="Rewards"

                                android:textColor="@android:color/black"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@android:color/black"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/round_corners"
                        android:backgroundTint="@color/lightGrey1"/>

                    <RelativeLayout
                        android:id="@+id/privacyPolicy"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                app:tint="@android:color/black"
                                android:layout_width="25dp"
                                android:layout_height = "25dp"
                                android:src="@drawable/ic_privacy_policy"/>

                            <TextView
                                style="@style/contentTextview"
                                android:layout_marginStart="20dp"
                                android:text="Privacy Policy"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@android:color/black"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/round_corners"
                        android:backgroundTint="@color/lightGrey1"/>

                    <RelativeLayout
                        android:id="@+id/rateUsRelative"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                app:tint="@android:color/black"
                                android:layout_width="25dp"
                                android:layout_height = "25dp"
                                android:src="@drawable/ic_google_play"/>

                            <TextView
                                style="@style/contentTextview"
                                android:layout_marginStart="20dp"
                                android:text="Rate Us"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@android:color/black"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/round_corners"
                        android:backgroundTint="@color/lightGrey1"/>

                    <RelativeLayout
                        android:id="@+id/faqRelative"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                app:tint="@android:color/black"
                                android:layout_width="25dp"
                                android:layout_height = "25dp"
                                android:src="@drawable/ic_faq"/>

                            <TextView
                                style="@style/contentTextview"
                                android:layout_marginStart="20dp"
                                android:text="Faq"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@android:color/black"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/round_corners"
                        android:backgroundTint="@color/lightGrey1"/>

                    <RelativeLayout
                        android:id="@+id/contactUsRelative"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                app:tint="@android:color/black"
                                android:layout_width="25dp"
                                android:layout_height = "25dp"
                                android:src="@drawable/ic_contact_us"/>

                            <TextView
                                style="@style/contentTextview"
                                android:layout_marginStart="20dp"
                                android:text="Contact Us"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@android:color/black"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/round_corners"
                        android:backgroundTint="@color/lightGrey1"/>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>
</layout>



