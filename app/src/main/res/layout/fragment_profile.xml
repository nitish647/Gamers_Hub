<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">


    <RelativeLayout
        android:background="@color/gamers_hub_theme"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/appBarLayoutRelative"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/profileRelative"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/appBarLayoutRelative">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileIcon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"


                    android:src="@drawable/gamers_hub_icon15">

                </de.hdodenhof.circleimageview.CircleImageView>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profileIcon"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/profileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Gamers Hub"
                        android:padding="5dp"

                        android:textColor="@android:color/white"

                        android:textStyle="bold">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">


                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:backgroundTint="#fee8a9"
                android:padding="5dp"
                android:background="@drawable/round_corners"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/redeemCoinsRecycler"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/indian_coin"
                    android:layout_width="35dp"
                    android:layout_height="35dp">

                </ImageView>
                <TextView
                    android:id="@+id/redeemCoinsTextview"
                    android:layout_marginStart="5dp"
                    android:text=" 5000 coins"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profileRelative"
            android:background="@drawable/top_round_corners"

            android:elevation="@dimen/cardview_default_elevation"
            android:padding="25dp">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fillViewport="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/rewardsRelative"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:elevation="@dimen/cardview_default_elevation">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <ImageView
                                style="@style/optionIcon"
                                android:src="@drawable/rupee_cashout">

                            </ImageView>

                            <TextView

                                style="@style/contentTextview"
                                android:layout_marginStart="20dp"

                                android:text="Rewards"


                                >

                            </TextView>
                        </LinearLayout>


                        <ImageView
                            style="@style/optionIcon2"

                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/next_arrow_icon"
                            app:tint="@color/greyPrimary">

                        </ImageView>
                    </RelativeLayout>




                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/round_corners"
                        android:backgroundTint="@color/lightGrey1">

                    </View>
                    <RelativeLayout
                        android:id="@+id/privacyPolicy"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:elevation="@dimen/cardview_default_elevation">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <ImageView
                                style="@style/optionIcon"
                                android:src="@drawable/agreement">

                            </ImageView>

                            <TextView

                                style="@style/contentTextview"
                                android:layout_marginStart="20dp"

                                android:text="Privacy Policy"


                                >

                            </TextView>
                        </LinearLayout>


                        <ImageView
                            style="@style/optionIcon2"

                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/next_arrow_icon"
                            app:tint="@color/greyPrimary">

                        </ImageView>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/round_corners"
                        android:backgroundTint="@color/lightGrey1">

                    </View>

                    <RelativeLayout
                        android:id="@+id/rateUsRelative"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:elevation="@dimen/cardview_default_elevation">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <ImageView
                                style="@style/optionIcon"
                                android:src="@drawable/playstore">

                            </ImageView>

                            <TextView

                                style="@style/contentTextview"
                                android:layout_marginStart="20dp"

                                android:text="Rate Us"


                                >

                            </TextView>
                        </LinearLayout>


                        <ImageView
                            style="@style/optionIcon2"

                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/next_arrow_icon"
                            app:tint="@color/greyPrimary">

                        </ImageView>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/round_corners"
                        android:backgroundTint="@color/lightGrey1">

                    </View>


                    <RelativeLayout

                        android:id="@+id/faqRelative"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:elevation="@dimen/cardview_default_elevation">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <ImageView
                                style="@style/optionIcon"
                                android:src="@drawable/faq">

                            </ImageView>

                            <TextView

                                style="@style/contentTextview"
                                android:layout_marginStart="20dp"

                                android:text="Faq"


                                >

                            </TextView>
                        </LinearLayout>


                        <ImageView
                            style="@style/optionIcon2"

                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/next_arrow_icon"
                            app:tint="@color/greyPrimary">

                        </ImageView>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/round_corners"
                        android:backgroundTint="@color/lightGrey1">

                    </View>
                    <RelativeLayout

                        android:id="@+id/contactUsRelative"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:elevation="@dimen/cardview_default_elevation">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <ImageView
                                style="@style/optionIcon"
                                android:src="@drawable/contact_us">

                            </ImageView>

                            <TextView

                                style="@style/contentTextview"
                                android:layout_marginStart="20dp"

                                android:text="Contact Us"


                                >

                            </TextView>
                        </LinearLayout>


                        <ImageView
                            style="@style/optionIcon2"

                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/next_arrow_icon"
                            app:tint="@color/greyPrimary">

                        </ImageView>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/round_corners"
                        android:backgroundTint="@color/lightGrey1">

                    </View>
                    <RelativeLayout

                        android:id="@+id/logOutRelative"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_margin="5dp"
                        android:elevation="@dimen/cardview_default_elevation">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <ImageView
                                style="@style/optionIcon"
                                android:src="@drawable/logout">

                            </ImageView>

                            <TextView

                                style="@style/contentTextview"
                                android:layout_marginStart="20dp"

                                android:text="Logout"


                                >

                            </TextView>
                        </LinearLayout>


                        <ImageView
                            style="@style/optionIcon2"

                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/next_arrow_icon"
                            app:tint="@color/greyPrimary">

                        </ImageView>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/round_corners"
                        android:backgroundTint="@color/lightGrey1">

                    </View>


                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>
</layout>