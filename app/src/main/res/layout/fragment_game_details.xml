<?xml version="1.0" encoding="utf-8"?>
<layout>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.GameDetailsFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appBarLayout"
        android:background="@color/gamers_hub_theme"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/backButton"
                android:src="@drawable/back_icon2"
                style="@style/backImageview"
            >

            </ImageView>
            <TextView
                android:layout_marginStart="25dp"
                android:text="Game Details"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView

        android:layout_above="@+id/bottomRelative"
        android:layout_below="@+id/appBarLayout"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout

            android:id="@+id/gameImageContainerRelative"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <FrameLayout

                android:id="@+id/gameContainerFrame"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"

                android:layout_width="150dp"
                android:layout_height="150dp">

                <ImageView

                    android:id="@+id/gameImageImageVIew"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:padding="7dp"
                    android:scaleType="fitXY">

                </ImageView>

                <ImageView
                    android:src="@drawable/img_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <TextView
                android:textStyle="bold"
                android:id="@+id/gameNameTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/gameContainerFrame"
                android:text="Ninja Action">

            </TextView>
            <TextView

                android:layout_below="@+id/gameNameTextview"

                android:id="@+id/gameCategoryTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/gameContainerFrame"
                android:text="Action">

            </TextView>

            <Button

                android:id="@+id/playButton"

                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_below="@+id/gameCategoryTextview"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/gameContainerFrame"
                android:text="Play"
                android:textColor="@android:color/white"
                android:textSize="15sp">

            </Button>


            <LinearLayout
                android:layout_below="@+id/playButton"
                android:orientation="horizontal"
                android:layout_toEndOf="@+id/gameContainerFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/favButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"

                    android:src="@drawable/fav_of2">

                </ImageView>
                <ImageView

                    android:id="@+id/reportButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"

                    android:src="@drawable/report_icon">

                </ImageView>
            </LinearLayout>


            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/gameDescTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gameContainerFrame"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp">

            </TextView>
        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/bottomRelative"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corners"
            android:backgroundTint="@color/materialOrange"
            android:elevation="@dimen/cardview_default_elevation"
            android:orientation="horizontal"

            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/gamePlayTimeTextview"
                style="@style/contentTextview"
                android:textSize="15sp"
                android:text="Play this game for 60 seconds to get rewarded"
                android:textColor="@android:color/white">

            </TextView>

            <ImageView

                android:layout_height="25dp"
                android:layout_width="25dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/indian_coin">

            </ImageView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
</layout>