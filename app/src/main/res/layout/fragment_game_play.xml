<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.GamePlayFragment">



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </WebView>

        <com.airbnb.lottie.LottieAnimationView

            android:id="@+id/frag_lottie_loading"

            android:layout_width="150dp"

            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginVertical="140dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading_4">

        </com.airbnb.lottie.LottieAnimationView>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/frag_no_internet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/no_internet">

        </com.airbnb.lottie.LottieAnimationView>
    </LinearLayout>

    <TextView
        android:layout_margin="5dp"

        android:layout_gravity="end"
        android:gravity="center"
        android:id="@+id/timerTextview"
        android:backgroundTint="@android:color/white"
        android:background="@drawable/simple_circle"
        android:padding="2dp"
        android:text="00"

        android:textSize="9sp"
        android:textColor="@android:color/black"

        android:layout_width="30dp"
        android:layout_height="30dp">

    </TextView>
</FrameLayout>