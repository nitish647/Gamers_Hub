<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fui_transparent"
        tools:context=".view.dialogs.ConfirmationDialog"
        android:padding="@dimen/_5sdp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/round_corners"
            android:backgroundTint="@color/lightGrey1"
            android:paddingHorizontal="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dialogIcon"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:src="@drawable/gamers_hub_icon15">

                </de.hdodenhof.circleimageview.CircleImageView>

                <TextView

                    android:id="@+id/titleTextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="Confirmation"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textHeadingXLarge"
                    style="@style/bold_arima_textview">

                </TextView>

                <TextView

                    android:id="@+id/messageTextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_4sdp"
                    style="@style/regular_textview"
                    tools:text="This is a sample message"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textHeading">

                </TextView>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp">

                    <Button


                        android:id="@+id/yesButton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/round_corners"
                        android:backgroundTint="@color/material_dark_blue"
                        android:elevation="@dimen/cardview_default_elevation"
                        android:padding="@dimen/_5sdp"
                        android:text="Yes"
                        android:textColor="@android:color/white">

                    </Button>

                    <Button
                        android:id="@+id/noButton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_corners"
                        android:elevation="@dimen/cardview_default_elevation"
                        android:padding="@dimen/_5sdp"
                        android:text="No"
                        android:textColor="@color/material_dark_blue">

                    </Button>
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>