<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<RelativeLayout
    android:background="@drawable/round_corners"
    android:layout_margin="5dp"
    android:elevation="@dimen/cardview_default_radius"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/transactionImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_corners"
        android:elevation="@dimen/cardview_default_elevation"
        android:padding="10dp"
        android:src="@drawable/paytm_logo" />


    <LinearLayout
        android:id="@+id/transactionInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/transactionImage"
        android:orientation="vertical"
        android:layout_toStartOf="@+id/amountLinear">

    <!--        android:layout_alignTop="@+id/transactionImage"
        android:layout_toStartOf="@+id/amountLinear"-->

        <TextView
            android:id="@+id/transactionTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Paytm"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/transactionNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UPIUPIUPIUPIUPIUPIUPIUPIUPIUPIUPIUPI"
            android:maxLines="2"
            android:textColor="@color/greyPrimary"
            android:textSize="15sp"
            android:justificationMode="inter_word"/>

        <TextView
            android:id="@+id/transactionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="13 july 2022 - 11:28 am"
            android:textColor="@color/greyPrimary"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/amountLinear"
            android:orientation="vertical"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/transactionAmount"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:layout_height="wrap_content"
                android:text=" â‚¹ 5000"/>

            <LinearLayout
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/indian_coin"
                    android:layout_width="14dp"
                    android:layout_height="14dp"/>
                <TextView
                    android:id="@+id/transactionCoins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:text="100"
                    android:textColor="@color/greyPrimary"
                    android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/infoTransactionStatus">
            <TextView
                android:id="@+id/statusTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="pending"
                android:textSize="14sp"/>
            <ImageView
                android:id="@+id/infoTransactionButton"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/report_icon"
                app:tint="@color/greyPrimary"
                android:layout_marginTop="1dp"
                android:layout_marginStart="2dp"/>
        </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/transactionLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transactionInfo"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/transactionImage"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/transactionIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id:  test229398298298239832"
            android:textColor="@color/greyPrimary"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/clipboardText"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:src="@drawable/copy_content"
            app:tint="@color/darkGrey"/>

    </LinearLayout>

    </RelativeLayout>

</layout>




