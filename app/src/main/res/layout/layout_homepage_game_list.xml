<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="textTitle"
            type="String" />

        <variable
            name="titleBackgroundColor"
            type="int" />
        <variable
            name="noItemBannerTitle"
            type="String" />
        <variable
            name="listItemCount"
            type="int" />
    </data>

<RelativeLayout
    android:background="@drawable/round_corner_10dp"
    android:paddingBottom="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:background="@drawable/top_round_corners_20_dp"
        android:backgroundTint="@{titleBackgroundColor}"
        tools:backgroundTint="@color/gamers_hub_theme"
        android:paddingVertical="@dimen/_10sdp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:gravity="center_horizontal"
        style="@style/extra_bold_textview"
        android:text="@{textTitle}"
        android:textColor="@color/white"
        tools:text="@string/favourites"
        android:layout_marginStart="@dimen/_10sdp"
        android:textSize="@dimen/textTitle"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <LinearLayout
        android:id="@+id/btnViewAllGames"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:layout_width="@dimen/_100sdp"
        android:gravity="center_vertical"

        >
        <TextView
            android:gravity="center_horizontal"
            style="@style/extra_bold_textview"
            android:text="@string/view_all"
            android:textColor="@color/white"
            android:paddingHorizontal="@dimen/_10sdp"
            android:textSize="@dimen/textExtraSmall"
            android:layout_weight="9"
            android:maxLines="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        </TextView>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_weight="1"
            app:tint="@color/white"
            android:src="@drawable/ic_arrow_forward"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp">

        </com.google.android.material.imageview.ShapeableImageView>

    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/titleLayout"
        android:elevation="@dimen/_2sdp"
        android:id="@+id/favouritesContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/noGameBanner"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="@{noItemBannerTitle}"
            style="@style/regular_textview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">

        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginStart="@dimen/_10sdp"
            android:id="@+id/recyclerView"
            tools:itemCount="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</RelativeLayout>
</layout>