<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        <item name="android:textColorSecondary">@android:color/white</item>-->
        <item name="android:statusBarColor">@color/gamers_hub_theme</item>
    </style>


    <style name="backImageview">
        <item name="android:src">@drawable/back_icon2</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_marginStart">15dp</item>

        <item name="android:layout_height">30dp</item>

    </style>


    <style name="optionIcon">
        <item name="android:tint">@color/darkGrey</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>

    </style>

    <style name="super_parent_textview">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="regular_textview" parent="super_parent_textview">
        <item name="android:fontFamily">@font/crimson_text</item>


    </style>

    <style name="bold_arima_textview" parent="super_parent_textview">
        <item name="android:fontFamily">@font/crimson_text_bold</item>


    </style>

    <style name="extra_bold_textview" parent="super_parent_textview">
        <item name="android:fontFamily">@font/crimson_pro_extrabold</item>


    </style>

    <style name="semi_bold_textview" parent="super_parent_textview">
        <item name="android:fontFamily">@font/crimson_text_semibold</item>


    </style>

    <!--              Layouts               -->

    <style name="rewards_relative_layout">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>

    </style>

    <style name="optionIcon2">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>

    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.RoundCorners" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>

    <style name="ShapeAppearanceOverlay.RoundCorners_10" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="ShapeAppearanceOverlay.Circle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="contentTextview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:color">@color/darkGrey</item>
    </style>

    <style name="contentTextviewBlue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_corner_10dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="transactionText">
        <item name="android:textColor">@color/greyPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="relative_rewards_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/round_corners</item>
        <item name="android:elevation">@dimen/cardview_default_elevation</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>

    </style>
</resources>